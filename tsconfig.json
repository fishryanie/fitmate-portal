{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "#mocks": ["mock"],
      "#mocks/*": ["mock/*"],
      "#schema": ["schema"],
      "#schema/*": ["schema/*"],
      "#service": ["service"],
      "#service/*": ["service/*"],
      "#controllers": ["controllers"],
      "#controllers/*": ["controllers/*"],
    }
  }
}
