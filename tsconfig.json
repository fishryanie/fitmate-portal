{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "#api": ["api"],
      "#api/*": ["api/*"],
      "#mock": ["mock"],
      "#mock/*": ["mock/*"],
      "#constant": ["constant"],
      "#constant/*": ["constant/*"],
      "#firebase": ["firebase"],
      "#firebase/*": ["firebase/*"],
      "#cloudinary": ["cloudinary"],
      "#cloudinary/*": ["cloudinary/*"],
      "#database": ["database"],
      "#database/*": ["database/*"],
    }
  }
}
